<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.config-tab');
    const panels = document.querySelectorAll('.config-panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabId = (tab as HTMLElement).dataset.tab;
        const targetPanel = tabId ? document.getElementById(tabId) : null;

        // Batch all DOM operations in requestAnimationFrame to prevent forced reflows
        requestAnimationFrame(() => {
          // Remove active class from all tabs and panels
          tabs.forEach(t => t.classList.remove('active'));
          panels.forEach(p => p.classList.remove('active'));

          // Add active class to clicked tab and corresponding panel
          tab.classList.add('active');
          if (targetPanel) {
            targetPanel.classList.add('active');
          }
        });
      });
    });
  });
</script>

<style>
  .config-tab {
    @apply inline-flex items-center gap-2 px-4 py-3 rounded-xl font-medium transition-all duration-300;
    @apply bg-card/50 text-muted-foreground hover:text-foreground hover:bg-card border border-border/50;
  }

  .config-tab.active {
    @apply bg-accent text-background shadow-lg;
    box-shadow: 0 10px 25px rgba(168, 85, 247, 0.25);
  }

  .config-panel {
    @apply hidden;
  }

  .config-panel.active {
    @apply block;
  }

  /* Code syntax highlighting */
  .language-json {
    color: var(--color-foreground);
  }

  /* JSON syntax colors */
  code .token.property {
    color: var(--color-accent);
  }

  code .token.string {
    color: var(--color-success);
  }

  code .token.number {
    color: var(--color-warning);
  }

  code .token.boolean {
    color: var(--color-accent-2);
  }

  /* Enhanced terminal styling */
  .terminal-window {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(20px);
  }

  /* Responsive tab styling */
  @media (max-width: 640px) {
    .config-tab span:not(.text-lg) {
      @apply hidden;
    }
  }
</style>