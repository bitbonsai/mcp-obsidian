---
import pkg from '../../../package.json';
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden px-4 sm:px-6 lg:px-8"
>
  <!-- Gradient background with transparency fade and noise -->
  <div
    class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 hero-gradient"
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto text-center">
    <!-- Floating badges -->
    <div
      class="floating-badges flex flex-wrap items-center justify-center gap-4 mb-8"
    >
      <span
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-card/50 backdrop-blur-sm border border-border/50 text-sm text-muted-foreground"
      >
        <span class="w-2 h-2 bg-success rounded-full"></span>
        v{pkg.version}
      </span>
      <span
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-card/50 backdrop-blur-sm border border-border/50 text-sm text-muted-foreground"
      >
        MIT License
      </span>
      <span
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-card/50 backdrop-blur-sm border border-border/50 text-sm text-muted-foreground"
      >
        Free
      </span>
    </div>

    <!-- Gradient text -->
    <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold mb-6">
      <span class="gradient-text"> AI + Obsidian = ðŸš€ </span>
    </h1>

    <!-- Tagline -->
    <p class="text-xl sm:text-2xl lg:text-3xl font-medium text-foreground mb-4">
      Your assistant. Your notes. Zero friction.
    </p>

    <!-- Subtext -->
    <p class="text-lg sm:text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
      This MCP server lets Claude, ChatGPT+, and other assistants read and write directly to your vaultâ€”locally, no cloud required.
    </p>

    <!-- CTA Buttons -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12"
    >
      <a
        href="#install"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-accent hover:bg-accent/90 text-white font-semibold text-lg transition-all duration-300 hover:shadow-[0_0_20px_rgba(139,92,246,0.6)] hover:-translate-y-1 hover:scale-105 group"
      >
        <svg
          class="w-5 h-5 text-white group-hover:rotate-12 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Get Started
      </a>
      <a
        href="https://github.com/bitbonsai/mcp-obsidian"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-xl border border-border/50 hover:border-accent/50 text-foreground font-semibold text-lg transition-all duration-300 glass group"
      >
        <svg
          class="w-5 h-5 group-hover:scale-110 transition-transform duration-300"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- Demo video -->
    <div class="w-full max-w-4xl mx-auto">
      <div class="video-container rounded-lg overflow-hidden shadow-2xl">
        <div class="relative video-aspect-ratio">
          <video
            class="absolute inset-0 w-full h-full object-contain"
            controls
            autoplay
            loop
            muted
            preload="auto"
            width="1152"
            height="720"
            poster="/video-poster-small.webp"
            {...{ fetchpriority: "high" } as any}
          >
            <source src="/mcp-obsidian-1-min.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>

      <!-- Support badges -->
      <div
        class="flex flex-wrap items-center justify-center gap-3 mt-8 mb-8 opacity-75 hover:opacity-100 transition-opacity duration-300"
      >
        <a
          href="https://github.com/bitbonsai/mcp-obsidian"
          target="_blank"
          rel="noopener noreferrer"
          class="transform hover:scale-105 transition-all duration-200 rounded hover:shadow-lg hover:shadow-accent/25"
          data-astro-cid-bbe6dxrz=""
        >
          <img
            src="https://img.shields.io/github/stars/bitbonsai/mcp-obsidian?style=flat&logo=github&logoColor=white&color=9065ea&labelColor=262626"
            alt="GitHub Stars"
            class="h-6 rounded"
            loading="lazy"
            data-astro-cid-bbe6dxrz=""
          />
        </a>
        <a
          href="https://www.npmjs.com/package/@mauricio.wolff/mcp-obsidian"
          target="_blank"
          rel="noopener noreferrer"
          class="transform hover:scale-105 transition-all duration-200 rounded hover:shadow-lg hover:shadow-accent/25"
        >
          <img
            src="https://img.shields.io/npm/v/@mauricio.wolff/mcp-obsidian?style=flat&logo=npm&logoColor=white&color=9065ea&labelColor=262626"
            alt="npm version"
            class="h-6 rounded"
            loading="lazy"
          />
        </a>
        <a
          href="https://github.com/sponsors/bitbonsai"
          target="_blank"
          rel="noopener noreferrer"
          class="transform hover:scale-105 transition-all duration-200 rounded hover:shadow-lg hover:shadow-accent/25"
        >
          <img
            src="https://img.shields.io/github/sponsors/bitbonsai?style=flat&logo=github&logoColor=white&color=9065ea&labelColor=262626"
            alt="GitHub Sponsors"
            class="h-6 rounded"
            loading="lazy"
          />
        </a>
        <a
          href="https://ko-fi.com/bitbonsai"
          target="_blank"
          rel="noopener noreferrer"
          class="transform hover:scale-105 transition-all duration-200 rounded hover:shadow-lg hover:shadow-accent/25"
        >
          <img
            src="https://img.shields.io/badge/Ko--fi-Support-9065ea?style=flat&logo=ko-fi&logoColor=white&labelColor=262626"
            alt="Ko-fi"
            class="h-6 rounded"
            loading="lazy"
          />
        </a>
        <a
          href="https://liberapay.com/bitbonsai/"
          target="_blank"
          rel="noopener noreferrer"
          class="transform hover:scale-105 transition-all duration-200 rounded hover:shadow-lg hover:shadow-accent/25"
        >
          <img
            src="https://img.shields.io/badge/Liberapay-Weekly-9065ea?style=flat&logo=liberapay&logoColor=white&labelColor=262626"
            alt="Liberapay"
            class="h-6 rounded"
            loading="lazy"
          />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero gradient with subtle noise */
  .hero-gradient {
    background:
      radial-gradient(
        125% 125% at 50% 10%,
        transparent 55%,
        #8b5cf6 75%,
        transparent 100%
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='1' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.03'/%3E%3C/svg%3E");
  }

  /* Additional animation delays */
  .animate-fade-in-up {
    opacity: 0;
    transform: translateY(2rem);
    animation: fade-in-up 0.8s ease-out forwards;
  }

  /* Video container styling */
  .video-container {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Maintain 16:10 aspect ratio (1152:720) */
  .video-aspect-ratio {
    aspect-ratio: 1152 / 720;
  }

  .video-container video {
    background: #000;
  }

  /* Hover effect for the whole hero */
  section:hover .gradient-text {
    animation-duration: 3s;
  }

  /* Responsive improvements */
  @media (max-width: 1024px) {
    .hero-gradient {
      background-size: 200% 200%;
    }
  }

  @media (max-width: 768px) {
    section {
      min-height: 100vh;
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 3rem !important;
      line-height: 1.1;
      margin-bottom: 1.5rem;
    }

    .text-xl,
    .text-2xl,
    .text-3xl {
      font-size: 1.25rem !important;
    }

    .text-lg {
      font-size: 1.125rem !important;
    }

    .flex-col.sm\\:flex-row {
      flex-direction: column;
      gap: 1rem;
    }

    .px-8 {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem !important;
      line-height: 1.1;
    }

    .text-xl,
    .text-2xl,
    .text-3xl {
      font-size: 1.125rem !important;
    }

    .px-4 {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  @media (max-width: 480px) {
    section {
      padding: 1rem 0.5rem;
    }

    h1 {
      font-size: 2rem !important;
    }

    .floating-badges {
      gap: 0.5rem;
    }
  }
</style>
