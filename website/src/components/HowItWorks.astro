  }
];
---

<section class="relative py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-background via-card/5 to-background">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16 fade-in-on-scroll">
      <h2 class="text-4xl sm:text-5xl font-bold gradient-text mb-6">
        Usage Examples
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Practical prompts you can try with your AI assistant and MCP-Obsidian.
      </p>
    </div>

    <!-- Examples -->
    <div class="space-y-8">
      {examples.map((example, index) => (
        <div class="fade-in-on-scroll" style={`animation-delay: ${index * 0.2}s`}>
          <div class="bg-card/30 backdrop-blur-xl rounded-2xl border border-border/50 overflow-hidden shadow-2xl">
            <!-- Chat header -->
            <div class="bg-card/50 border-b border-border/50 p-4">
              <div class="flex items-center gap-3">
                <div class="flex gap-2">
                  <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                </div>
                <span class="font-mono text-sm text-muted-foreground">
                  {example.title}
                </span>
                <div class="ml-auto flex gap-2">
                  {example.tags.map(tag => (
                    <span class="text-xs px-2 py-1 rounded-full bg-accent/20 text-accent">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>

            <!-- Chat content -->
            <div class="p-6 space-y-6">
              <!-- User message -->
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 rounded-full bg-accent flex items-center justify-center text-background font-bold text-sm">
                  You
                </div>
                <div class="flex-1">
                  <div class="bg-background/50 rounded-2xl rounded-tl-none p-4 border border-border/30">
                    <p class="text-foreground">{example.prompt}</p>
                  </div>
                </div>
              </div>

              <!-- AI response -->
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 rounded-full bg-accent-2 flex items-center justify-center text-background font-bold text-sm">
                  AI
                </div>
                <div class="flex-1">
                  <div class="bg-card/20 rounded-2xl rounded-tl-none p-4 border border-border/30">
                    <ResponseRenderer client:only="react" response={example.response} />
                  </div>
                </div>
              </div>
            </div>

            <!-- Technical details -->
            <div class="bg-background/30 border-t border-border/50 p-6">
              <p class="text-sm text-muted-foreground">
                {example.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="text-center mt-16 fade-in-on-scroll">
      <div class="inline-flex items-center gap-4 p-8 bg-gradient-to-r from-accent/10 via-accent-2/10 to-success/10 rounded-3xl border border-border/50 backdrop-blur-xl">
        <div class="text-6xl">ðŸŽ¯</div>
        <div class="text-left">
          <h3 class="text-2xl font-bold text-foreground mb-2">
            Example Prompts
          </h3>
          <p class="text-muted-foreground mb-4">
            Once MCP-Obsidian is set up, these prompts demonstrate search, read, and write operations in a single flow.
          </p>
          <a
            href="/install"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-accent hover:bg-accent/90 text-white font-semibold transition-all duration-300 hover:shadow-[0_0_20px_rgba(139,92,246,0.6)] hover:-translate-y-1 hover:scale-105"
          >
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Get Started Now
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhanced animations */
  .fade-in-on-scroll {
    opacity: 0;
    transform: translateY(2rem);
    animation: fade-in-up 0.8s ease-out forwards;
  }

  @keyframes fade-in-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Button glow effect */

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .text-2xl {
      font-size: 1.5rem !important;
    }

    .p-6 {
      padding: 1rem !important;
    }

    .p-4 {
      padding: 0.75rem !important;
    }

    pre {
      font-size: 0.75rem !important;
    }
  }
</style>