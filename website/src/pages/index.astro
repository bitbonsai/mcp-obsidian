---
import Layout from '@layouts/Layout.astro';
import Nav from '@components/Nav.astro';
import Hero from '@components/Hero.astro';
import UpdateCallout from '@components/UpdateCallout.astro';
import Footer from '@components/Footer.astro';
---

<Layout>
  <Nav />

  <!-- Main content -->
  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- What's New Callout -->
    <UpdateCallout />

    <!-- Footer -->
    <Footer />
  </main>
</Layout>

<style>
  /* Prevent horizontal overflow */
  html, body {
    overflow-x: hidden;
    width: 100%;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
  }

  /* Remove top padding since nav is floating */
  main {
    padding-top: 0;
  }

  /* Theme utilities */
  .text-accent {
    color: var(--color-accent);
  }

  .text-accent-2 {
    color: var(--color-accent-2);
  }

  .text-success {
    color: var(--color-success);
  }

  .text-warning {
    color: var(--color-warning);
  }

  .text-error {
    color: var(--color-error);
  }

  .bg-accent {
    background-color: var(--color-accent);
  }

  .bg-accent-2 {
    background-color: var(--color-accent-2);
  }

  .bg-success {
    background-color: var(--color-success);
  }

  .bg-warning {
    background-color: var(--color-warning);
  }

  .bg-error {
    background-color: var(--color-error);
  }

  .bg-background {
    background-color: var(--color-background);
  }

  .bg-foreground {
    background-color: var(--color-foreground);
  }

  .bg-muted {
    background-color: var(--color-muted);
  }

  .bg-card {
    background-color: var(--color-card);
  }

  .bg-border {
    background-color: var(--color-border);
  }

  .text-background {
    color: var(--color-background);
  }

  .text-foreground {
    color: var(--color-foreground);
  }

  .text-muted-foreground {
    color: var(--color-muted);
  }

  .border-border {
    border-color: var(--color-border);
  }

  /* Comprehensive responsive improvements */
  @media (max-width: 1024px) {
    .max-w-7xl {
      max-width: 90%;
    }

    .max-w-6xl {
      max-width: 90%;
    }

    .max-w-4xl {
      max-width: 90%;
    }
  }

  @media (max-width: 768px) {
    html {
      scroll-padding-top: 60px;
    }

    main {
      padding-top: 0;
    }

    /* General spacing fixes */
    .px-4, .px-6, .px-8 {
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }

    .py-16 {
      padding-top: 3rem !important;
      padding-bottom: 3rem !important;
    }

    .py-12 {
      padding-top: 2rem !important;
      padding-bottom: 2rem !important;
    }

    .gap-8 {
      gap: 1rem !important;
    }

    .gap-6 {
      gap: 0.75rem !important;
    }

    /* Grid responsive fixes */
    .grid-cols-1.md\:grid-cols-2 {
      grid-template-columns: repeat(1, minmax(0, 1fr)) !important;
    }

    .grid-cols-1.md\:grid-cols-3 {
      grid-template-columns: repeat(1, minmax(0, 1fr)) !important;
    }

    .grid-cols-1.md\:grid-cols-4 {
      grid-template-columns: repeat(1, minmax(0, 1fr)) !important;
    }

    /* Text size adjustments */
    .text-3xl {
      font-size: 1.5rem !important;
    }

    .text-2xl {
      font-size: 1.25rem !important;
    }

    .text-xl {
      font-size: 1.125rem !important;
    }
  }

  @media (max-width: 640px) {
    .px-4 {
      padding-left: 0.75rem !important;
      padding-right: 0.75rem !important;
    }

    .text-3xl {
      font-size: 1.25rem !important;
    }

    .text-2xl {
      font-size: 1.125rem !important;
    }

    .text-xl {
      font-size: 1rem !important;
    }

    /* Button responsive fixes */
    .flex-col.sm\:flex-row {
      flex-direction: column !important;
      gap: 0.75rem !important;
    }

    .inline-flex {
      width: 100% !important;
      justify-content: center !important;
    }
  }

  @media (max-width: 480px) {
    .px-4, .px-6, .px-8 {
      padding-left: 0.5rem !important;
      padding-right: 0.5rem !important;
    }

    .py-16 {
      padding-top: 2rem !important;
      padding-bottom: 2rem !important;
    }

    .py-12 {
      padding-top: 1.5rem !important;
      padding-bottom: 1.5rem !important;
    }

    .max-w-6xl, .max-w-4xl, .max-w-3xl {
      max-width: 95% !important;
    }
  }
</style>
