{
  "name": "@mauricio.wolff/mcp-obsidian",
  "version": "0.5.0",
  "description": "Lightweight MCP server for safe Obsidian vault access",
  "author": "bitbonsai",
  "license": "MIT",
  "type": "module",
  "main": "server.ts",
  "bin": {
    "mcp-obsidian": "./dist/server.js",
    "@mauricio.wolff/mcp-obsidian": "./dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx server.ts",
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm install",
    "publish:dry": "npm publish --dry-run",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitbonsai/mcp-obsidian.git"
  },
  "keywords": [
    "mcp",
    "obsidian",
    "model-context-protocol",
    "claude",
    "ai",
    "node",
    "filesystem",
    "frontmatter",
    "yaml"
  ],
  "publishConfig": {
    "access": "public"
  }
}
